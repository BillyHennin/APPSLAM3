<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- derive from Light or Dark theme-->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FirstFloor.ModernUI;component/Assets/ModernUI.dark.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- specify the accent color (optional) -->
    <Color x:Key="AccentColor">#ff0000</Color>

    <!-- custom theme resources-->
    <Rectangle x:Key="WindowBackgroundContent"  Margin="32" x:Shared="false">
        <Rectangle.Fill>
            <ImageBrush AlignmentX="Right"
                        AlignmentY="Bottom"
                        ImageSource="/Assets/background.impero.png"
                        Opacity=".1"
                        Stretch="None" />
        </Rectangle.Fill>
    </Rectangle>
</ResourceDictionary>