<mui:ModernWindow x:Class="MANAGER.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"

                  Title="Manager"
                  Height="600"
                  Width="824"
                  ContentSource="/Pages/about.xaml"
                  MinHeight="500"
                  MinWidth="550"
                  IsTitleVisible="True"
                  ToolTip="{DynamicResource {x:Type ToolTip}}" Icon="Asset/appbar.currency.euro.png"
                  Initialized="                                                                                                                                                                                                                                                                                                                                                                                                       ModernWindow_Initialized">

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="A propos" Source="/Pages/about.xaml" />
        <mui:Link DisplayName="Apparence" Source="Pages/Appearance.xaml" />
        <mui:Link DisplayName="Parametres" Source="Pages/Parametre.xaml" />
    </mui:ModernWindow.TitleLinks>

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Cost estimate manager">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Cost estimate" Source="/Pages/EstimateCreator.xaml" />
                <mui:Link DisplayName="Client" Source="/Pages/DisplayClient.xaml" />
                <mui:Link DisplayName="Merchandise" Source="/Pages/DisplayMerchandise.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

</mui:ModernWindow>